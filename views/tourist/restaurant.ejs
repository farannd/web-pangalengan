<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <!-- Custom CSS -->
    <link rel='stylesheet' href="/styles/tourist/index.css" >

    <title>Beautiful Pangalengan</title>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light fixed-top">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Pangalengan</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mx-auto">
              <li class="nav-item">
                <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/about-us">About Us</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/activity">Activity</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/tourist-attraction">Tourist Attraction</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/gallery">Gallery</a>
              </li>
            </ul>
            <ul class="navbar-nav">
              <% if(!currentUser) { %>
                <li class="nav-item">
                    <a href="/login" class="nav-link">Login</a>
                </li>
                <li class="nav-item">
                    <a href="/register" class="nav-link">Register</a>
                </li>
              <% }else{ %>
                <li class="nav-item">
                    <a href="/profile/<%= currentUser._id %>" class="nav-link">Signed in As <%= currentUser.username %> </a>
                </li>
                <li class="nav-item">
                        <a href="/logout" class="nav-link">Log Out</a>
                </li>
              <% } %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <div class='site-content'>
        <div class="d-flex justify-content-center">
          <div class="d-flex flex-column align-items-center text-center">
            <h1 class="site-title">
              Tourist Attraction
            </h1>
          </div>
        </div>
      </div>

      <% if(success && success.length>0 ){ %>
        <div class="container my-3">
          <div class="alert alert-success " role="alert">
              <%= success %>
          </div>
        </div>
      <% } %>
      <% if(warning && warning.length>0){ %>
        <div class="container my-3">
          <div class="alert alert-warning " role="alert">
              <%= warning %>
          </div>
        </div>
      <% } %>
      <% if (error && error.length>0){ %>
        <div class="container my-3">
          <div class="alert alert-danger " role="alert">
              <%= error %>
          </div>
        </div>
      <% } %>

      <!-- input ure content -->
      <div class="navigasi container my-3 my-lg-5">
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link px-2 px-lg-5" href="/tourist-attraction">All</a>
          </li>
          <li class="nav-item">
            <a class="nav-link px-1 px-lg-5" href="/tourist-attraction/attraction">Attraction</a>
          </li>
          <li class="nav-item">
            <a class="nav-link px-1 px-lg-5" href="/tourist-attraction/lodging">Lodging</a>
          </li>
          <li class="nav-item">
            <a class="nav-link px-1 px-lg-5 active" href="/tourist-attraction/restaurant">Restaurant</a>
          </li>
        </ul>
      </div>

      <div class="section-1 container">
        <a id="myBtn" class= 'btn btn-primary' href='/tourist-attraction/new'>New Post</a>
        <div class="row justify-content-center align-items-center">

          <% if(posts){ %>
            <% posts.forEach(post=>{ %>
              <div class="col-12 col-md-6 col-lg-4 justify-content-center align-items-center">
                <div class="card" style="width: 18rem;">
                  <% if(post.image) { %>
                    <img src="data:image/<%= post.image[0].contentType%>;base64,<%= post.image[0].data.toString('base64')%>" class="img" alt="images">
                  <% } else{ %>
                    <img src="/images/emptypic.png" class="img" alt="images">
                  <% } %>
                  <div class="card-body">
                      <a href='/tourist-attraction/<%=post._id%>'> <h5 class="card-title"> <%= post.title %></h5> </a>
                      <p class="card-text"><%= post.content.slice(0,150) %> ...</p>
                      <p class='category'><%= post.category %></p>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <div class="notfound my-3 my-lg-5">
              <img src="/images/frown.png" alt="frown" class='img1'>
              <h1 class='text-center'>There are still no posts in the restaurant category yet</h1>
            </div>
          <% } %>
          
        </div>
      </div>
    </main>

    <footer>
      <div class="container-fluid footer">
        <div class="row justify-content-between align-items-start">
          <div class="col-12 col-lg-8 order-2 order-lg-1 my-2 text-center">
            <h4>Contact Us!</h4>
            <div class="mb-2">
              <a href='/'>
                <img src="/images/ig.png" alt="ig">
              </a>
              <a href='/'>
                <img src="/images/fb.png" alt="ig">
              </a>
            </div>
            <p class='param-footer'>Designed and built with all the love in the world by Farand from the Wayang Windu KKN team and with the help of our contributors. All right reserved. Pangalengan</p>
            <div class="my-2">
              <img src="/images/ugm.png" alt="ugm" class='sponsor-img'>
              <img src="/images/kkn-ppm.png" alt="kkn-ppm" class='sponsor-img'>
              <img src="/images/ww.png" alt="ww" class='sponsor-img'>
              <img src="/images/se.png" alt="se" class='sponsor-img'>
              <img src="/images/geothermal.png" alt="geothermal" class='sponsor-img'>
            </div>
          </div>
          <div class="col-12 col-lg-4 order-1 order-lg-2 pb-1 justify-content-end">
            <h4>Our Location</h4>
            <div class="mapouter">
              <div class="gmap_canvas">
                <iframe width="350" height="250" id="gmap_canvas" src="https://maps.google.com/maps?q=pangalengan%20indonesia&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0">
                </iframe>
              </div>
            </div>
          </div>
        </div>

      </div>
    </footer>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>